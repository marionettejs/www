  <div class="code-sample-block first-sample-block">
      <h4 class="code-header">Setup</h4>
      <pre class="prettyprint">
<code>
var SingleLink = Backbone.Marionette.ItemView.extend({
  tagName: "li",
  template: _.template("&lt;a href='<%%-path%>'><%%-path%>&lt;/a>")
});

var ListView = Backbone.Marionette.CollectionView.extend({
  tagName: 'ul',
  childView: SingleLink
});
</code></pre>
  </div>
  <div class="code-sample-block second-sample-block">
      <h4 class="code-header">Using</h4>
      <pre class="prettyprint">
      <code>
var list = new Backbone.Collection([
  {path: 'http://google.com'},
  {path: 'http://marionettejs.com/'},
]);

(new ListView({
  collection: list,
  el: '.link-area'
})).render();

      </code></pre>
